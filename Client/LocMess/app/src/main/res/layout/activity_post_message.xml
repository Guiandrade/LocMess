<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.ulisboa.tecnico.cmu.locmess.PostMessageActivity">


    <EditText
        android:id="@+id/etMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Message"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/etTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Title" />

    <Spinner
        android:id="@+id/sSelectLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/etMessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvBlacklist"
        android:text="- - - - - - - - - - - - -  Blacklist Policy  - - - - - - - - - - - - -"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/bKeyPairsWhiteList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/bSetDate"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="10dp"
        android:text="SET DATE"
        android:layout_above="@+id/tvDate"
        android:layout_toRightOf="@+id/bKeyPairsBlackList"
        android:layout_toEndOf="@+id/bKeyPairsBlackList" />

    <Button
        android:id="@+id/bSetTime"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="SET TIME"
        android:textSize="10dp"
        android:layout_below="@+id/bKeyPairsBlackList"
        android:layout_toLeftOf="@+id/bKeyPairsBlackList"
        android:layout_toStartOf="@+id/bKeyPairsBlackList"
        android:layout_marginTop="13dp" />

    <Button
        android:id="@+id/bKeyPairsBlackList"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="13dp"
        android:text="Add/edit key pairs"
        android:textSize="10dp"
        android:layout_below="@+id/tvBlacklist"
        android:layout_alignLeft="@+id/bKeyPairsWhiteList"
        android:layout_alignStart="@+id/bKeyPairsWhiteList" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:layout_below="@+id/bSetTime"
        android:layout_alignLeft="@+id/bSetTime"
        android:layout_alignStart="@+id/bSetTime"
        android:layout_alignRight="@+id/bSetTime"
        android:layout_alignEnd="@+id/bSetTime" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="TextView"
        android:layout_alignBaseline="@+id/tvTime"
        android:layout_alignBottom="@+id/tvTime"
        android:layout_alignLeft="@+id/bSetDate"
        android:layout_alignStart="@+id/bSetDate"
        android:layout_alignRight="@+id/bSetDate"
        android:layout_alignEnd="@+id/bSetDate" />

    <Button
        android:id="@+id/bPostMessage"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Post Message"
        android:layout_marginBottom="11dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvWhitelist"
        android:text="- - - - - - - - - - - - -  Whitelist Policy  - - - - - - - - - - - - -"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sSelectLocation"
        android:layout_marginTop="22dp" />

    <Button
        android:id="@+id/bKeyPairsWhiteList"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textSize="10dp"
        android:text="Add/edit key pairs"
        android:layout_below="@+id/tvWhitelist"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />


</RelativeLayout>
