<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.ulisboa.tecnico.cmu.locmess.PostMessageActivity">


    <EditText
        android:id="@+id/etMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Message"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/etTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Title" />

    <Spinner
        android:id="@+id/sSelectLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/etMessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/sSelectPolicy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/sSelectLocation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/bSetDate"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="10dp"
        android:text="SET DATE"
        android:layout_alignBaseline="@+id/bSetTime"
        android:layout_alignBottom="@+id/bSetTime"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp" />

    <Button
        android:id="@+id/bSetTime"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bKeyPairs"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="38dp"
        android:text="SET TIME"
        android:textSize="10dp" />

    <Button
        android:id="@+id/bKeyPairs"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/sSelectPolicy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Add/edit key pairs"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textAlignment="center"
        android:layout_below="@+id/bSetTime"
        android:layout_alignLeft="@+id/bSetTime"
        android:layout_alignStart="@+id/bSetTime"
        android:layout_toLeftOf="@+id/bPostMessage"
        android:layout_toStartOf="@+id/bPostMessage" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="TextView"
        android:layout_alignBaseline="@+id/tvTime"
        android:layout_alignBottom="@+id/tvTime"
        android:layout_alignLeft="@+id/bSetDate"
        android:layout_alignStart="@+id/bSetDate"
        android:layout_alignRight="@+id/bSetDate"
        android:layout_alignEnd="@+id/bSetDate" />

    <Button
        android:id="@+id/bPostMessage"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Post Message"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />


</RelativeLayout>
